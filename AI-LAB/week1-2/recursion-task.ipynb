   "source": [
    "### Reverse a string using recursion"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 20,
   "metadata": {},
   "outputs": [],
   "source": [
    "string = \"hello\"\n",
    "def reverse(string):\n",
    "    if len(string) == 0:\n",
    "        return\n",
    "    print(string[len(string)-1])\n",
    "    reverse(string[:-1])\n",
    "    return"
   ]
  },
  {
